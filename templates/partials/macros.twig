
{% macro createCssClass(prefix, classname) %}
    {% if classname is defined and classname != "default" %}
        {{prefix}}{{classname}}
    {% endif %}
{% endmacro %}

{% macro createCssClasses(array) %}
    {% set out = "" %}
    {% for class in array %}
        {% set out = out ~ _self.createCssClass(class['prefix'], class['classname']) ~ " " %}
    {% endfor %}
    {{ out }}
{% endmacro %}

